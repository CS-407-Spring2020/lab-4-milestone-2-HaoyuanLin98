<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:background="@drawable/nexus5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/nexus5" />

    <TextView
        android:id="@+id/Hiker"
        android:layout_width="232dp"
        android:layout_height="0dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="46dp"
        android:layout_marginRight="46dp"
        android:layout_marginBottom="29dp"
        android:text="Hiker's Watch"
        android:textColor="#FC050505"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/Latitude"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginBottom="7dp"
        android:text="Latitude:"
        android:textColor="#020202"
        android:textColorHighlight="#00FFFFFF"
        android:textColorLink="#00E9E2E2"
        app:layout_constraintBottom_toTopOf="@+id/Longitude"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Hiker" />

    <TextView
        android:id="@+id/Longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="12dp"
        android:text="Longitude:"
        android:textColor="#030303"
        android:textColorHighlight="#00FFFFFF"
        android:textColorLink="#00E9E2E2"
        app:layout_constraintBottom_toTopOf="@+id/Accuracy"
        app:layout_constraintStart_toStartOf="@+id/Latitude"
        app:layout_constraintTop_toBottomOf="@+id/Latitude" />

    <TextView
        android:id="@+id/Accuracy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="9dp"
        android:text="Accuracy:"
        android:textColor="#020202"
        android:textColorHighlight="#00FFFFFF"
        android:textColorLink="#00E9E2E2"
        app:layout_constraintBottom_toTopOf="@+id/Altitude"
        app:layout_constraintStart_toStartOf="@+id/Altitude"
        app:layout_constraintTop_toBottomOf="@+id/Longitude" />

    <TextView
        android:id="@+id/Altitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Altitude:"
        android:textColor="#050505"
        android:textColorHighlight="#00FFFFFF"
        android:textColorLink="#00E9E2E2"
        app:layout_constraintBottom_toTopOf="@+id/addressTextView"
        app:layout_constraintEnd_toEndOf="@+id/Latitude"
        app:layout_constraintStart_toStartOf="@+id/Latitude"
        app:layout_constraintTop_toBottomOf="@+id/Accuracy" />

    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="385dp"
        android:text="Address:"
        android:textColor="#020202"
        android:textColorHighlight="#00FFFFFF"
        android:textColorLink="#00E9E2E2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/Altitude"
        app:layout_constraintTop_toBottomOf="@+id/Altitude" />

</androidx.constraintlayout.widget.ConstraintLayout>